<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="double_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="double_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wfill_hwrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wwrap_hfill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="wweight_hwarp">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wweight_hfill">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="hweight_wwarp">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dip</item>
    </style>

    <style name="hweight_wfill">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
    </style>

    <style name="wweight_hmatch">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wweight_hwrap">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShareLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="ShareProgressDialog" parent="@style/ShareLoadingDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="font_attendance_calendar_bar" parent="@style/wweight_hfill">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#6189af</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="line_one_topic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">#6189af</item>
    </style>
    <style name="line_two_order">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#f3753d</item>
    </style>
    <style name="line_three_order">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#fbd6c3</item>
    </style>
    <style name="font_personal_black_one" parent="@style/double_wrap">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="font_personal_gray" parent="@style/double_wrap">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="edit_personal_gray">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#939695</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_edittext_normal</item>
    </style>
    <style name="font_personal_black" parent="@style/double_wrap">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#f6753b</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="delivery_order_radiobutton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:textColor">@color/main_nav_radio_font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_nav_radio_bt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="common_gray" parent="@style/double_wrap">
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="common_black" parent="@style/double_wrap">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="common_orange" parent="@style/double_wrap">
        <item name="android:textColor">#f4753b</item>
        <item name="android:textSize">13.5sp</item>
    </style>
</resources>
