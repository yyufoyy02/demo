<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:background="@android:color/white"
        android:padding="@dimen/dp5">

        <TextView
            android:id="@+id/tv_maintenanceperiods_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@android:color/holo_red_light"
            tools:text="New Text" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_maintenanceperiods_status"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_maintenanceperiods_icon"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10" />

            <TextView
                android:id="@+id/tv_maintenanceperiods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_toRightOf="@+id/iv_maintenanceperiods_icon"
                android:textColor="@color/text_color_555"
                android:textSize="@dimen/sp18"
                tools:text="New Text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_maintenanceperiods_fault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"

                android:text="电梯：SHDF002"
                android:textColor="@color/text_color_999" />

            <TextView
                android:id="@+id/tv_maintenanceperiods_faulttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_maintenanceperiods_fault"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:text="类型：半月宝"
                android:textColor="@color/text_color_999" />

            <TextView
                android:id="@+id/tv_maintenanceperiods_submit"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/corners_blue_radius6"
                android:gravity="center"
                android:text="查看"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_maintenanceperiods_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/relativeLayout"
            android:layout_marginRight="@dimen/dp10"
            tools:text="New Text" />

        <TextView
            android:id="@+id/tv_maintenanceperiods_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_toLeftOf="@+id/tv_maintenanceperiods_time"
            android:layout_toStartOf="@+id/tv_maintenanceperiods_time"
            android:text="时间："
            android:textColor="@color/text_color_333" />
    </RelativeLayout>

</LinearLayout>