<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        style="@style/SettingRelativeLayoutStyle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_maintenancepolicyruleitem_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp30"
            android:text="维保内容"
            android:textColor="@color/text_color_555" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_maintenancepolicyruleitem_switch"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:src="@drawable/btn_rule_switch" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>