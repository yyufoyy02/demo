<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@id/toolbar"
        layout="@layout/normal_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_settingmodify_oldpassword"
            style="@style/SettingEditStyle.MarginTop10"
            android:hint="旧密码" />

        <EditText
            android:id="@+id/edt_settingmodify_newpassword"
            style="@style/SettingEditStyle.MarginTop10"
            android:hint="新密码"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edt_settingmodify_newpassword2"
            style="@style/SettingEditStyle.MarginTop10"
            android:hint="确认密码"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tv_settingmodify_submit"
            style="@style/SubmitStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp30"
            android:text="确认修改" />
    </LinearLayout>
</LinearLayout>